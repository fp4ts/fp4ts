{
  "extends": "./tsconfig.build.json",
  "compilerOptions": {
    "baseUrl": "./packages",
    "paths": {
      "@fp4ts/cats": ["./cats/index.ts"],
      "@fp4ts/cats-core": ["./cats/core/src"],
      "@fp4ts/cats-core/lib/*": ["./cats/core/src/*"],
      "@fp4ts/cats-free": ["./cats/free/src"],
      "@fp4ts/cats-free/lib/*": ["./cats/free/src/*"],
      "@fp4ts/cats-laws": ["./cats/laws/src"],
      "@fp4ts/cats-laws/lib/*": ["./cats/laws/src/*"],
      "@fp4ts/cats-test-kit": ["./cats/test-kit/src"],
      "@fp4ts/cats-test-kit/lib/*": ["./cats/test-kit/src/*"],
      "@fp4ts/core": ["./core/src"],
      "@fp4ts/core/lib/*": ["./core/src/*"],
      "@fp4ts/effect": ["./effect/index.ts"],
      "@fp4ts/effect-core": ["./effect/core/src"],
      "@fp4ts/effect-core/lib/*": ["./effect/core/src/*"],
      "@fp4ts/effect-kernel": ["./effect/kernel/src"],
      "@fp4ts/effect-kernel/lib/*": ["./effect/kernel/src/*"],
      "@fp4ts/effect-laws": ["./effect/laws/src"],
      "@fp4ts/effect-laws/lib/*": ["./effect/laws/src/*"],
      "@fp4ts/effect-std": ["./effect/std/src"],
      "@fp4ts/effect-std/lib/*": ["./effect/std/src/*"],
      "@fp4ts/effect-test-kit": ["./effect/test-kit/src"],
      "@fp4ts/effect-test-kit/lib/*": ["./effect/test-kit/src/*"],
      "@fp4ts/http": ["./http/index.ts"],
      "@fp4ts/http-core": ["./http/core/src"],
      "@fp4ts/http-core/lib/*": ["./http/core/src/*"],
      "@fp4ts/http-dsl": ["./http/dsl/src"],
      "@fp4ts/http-dsl/lib/*": ["./http/dsl/src/*"],
      "@fp4ts/http-node-server": ["./http/node-server/src"],
      "@fp4ts/http-node-server/lib/*": ["./http/node-server/src/*"],
      "@fp4ts/schema": ["./schema/index.ts"],
      "@fp4ts/schema-core": ["./schema/core/src"],
      "@fp4ts/schema-core/lib/*": ["./schema/core/src/*"],
      "@fp4ts/schema-kernel": ["./schema/kernel/src"],
      "@fp4ts/schema-kernel/lib/*": ["./schema/kernel/src/*"],
      "@fp4ts/stream": ["./stream/index.ts"],
      "@fp4ts/stream-core": ["./stream/core/src"],
      "@fp4ts/stream-core/lib/*": ["./stream/core/src/*"],
      "@fp4ts/stream-io": ["./stream/io/src"],
      "@fp4ts/stream-io/lib/*": ["./stream/io/src/*"],
      "@fp4ts/stream-test-kit": ["./stream/test-kit/src"],
      "@fp4ts/stream-test-kit/lib/*": ["./stream/test-kit/src/*"],
    },
    "rootDirs": [
      "./cats",
      "./cats/core/src",
      "./cats/free/src",
      "./cats/laws/src",
      "./core/src",
      "./effect",
      "./effect/core/src",
      "./effect/kernel/src",
      "./effect/laws/src",
      "./effect/std/src",
      "./effect/test-kit/src",
      "./schema/",
      "./schema/core/src",
      "./schema/kernel/src",
      "./stream/",
      "./stream/core/src",
      "./stream/test-kit/src",
      "./examples/",
    ]
  },

  "exclude": [
    "**/lib/**/*"
  ],

  "include": [
    "**/*"
  ],
}
