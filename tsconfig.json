{
  "extends": "./tsconfig.build.json",
  "compilerOptions": {
    "baseUrl": "./packages",
    "paths": {
      "@cats4ts/cats-core": ["./cats/core/src"],
      "@cats4ts/cats-core/lib/*": ["./cats/core/src/*"],
      "@cats4ts/cats-free": ["./cats/free/src"],
      "@cats4ts/cats-free/lib/*": ["./cats/free/src/*"],
      "@cats4ts/core": ["./core/src"],
      "@cats4ts/core/lib/*": ["./core/src/*"],
      "@cats4ts/effect-core": ["./effect/core/src"],
      "@cats4ts/effect-core/lib/*": ["./effect/core/src/*"],
      "@cats4ts/effect-kernel": ["./effect/kernel/src"],
      "@cats4ts/effect-kernel/lib/*": ["./effect/kernel/src/*"],
      "@cats4ts/effect-std": ["./effect/std/src"],
      "@cats4ts/effect-std/lib/*": ["./effect/std/src/*"],
      "@cats4ts/effect-test-kit": ["./effect/test-kit/src"],
      "@cats4ts/effect-test-kit/lib/*": ["./effect/test-kit/src/*"],
      "@cats4ts/stream-core": ["./stream/core/src"],
      "@cats4ts/stream-core/lib/*": ["./stream/core/src/*"],
    },
    "rootDirs": [
      "./cats/core/src",
      "./cats/free/src",
      "./core/src",
      "./effect/core/src",
      "./effect/kernel/src",
      "./effect/std/src",
      "./effect/test-kit/src",
      "./stream/core/src"
    ]
  }
}
